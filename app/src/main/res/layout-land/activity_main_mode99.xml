<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-28dp"
        android:background="#1D1616">

        <LinearLayout
            android:id="@+id/horizontalFlech"
            android:layout_gravity="bottom|end"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"

            android:orientation="horizontal">
            <!--             android:layout_marginBottom="70dp"
     -->
            <ImageButton
                android:id="@+id/buttonLanguageFlech"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:adjustViewBounds="true"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:layout_marginEnd="20dp"
                app:srcCompat="@drawable/forward99" />

            <ImageButton
                android:id="@+id/buttonVolume"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:visibility="visible"
                app:srcCompat="@drawable/volume99" />

            <ImageButton
                android:id="@+id/buttonLanguage"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="120dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:visibility="visible"
                app:srcCompat="@drawable/language99" />

            <ImageButton
                android:id="@+id/info"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/info99"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/bottomImage"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:rotation="0"
            android:src="@drawable/campfire"
            android:layout_marginEnd="0dp"
            >

        </ImageView>

        <ImageView
            android:id="@+id/topImage"
            android:layout_width="wrap_content"
            android:layout_marginTop="-5dp"
            android:layout_height="100dp"
            android:rotation="180"
            android:visibility="invisible"

            app:srcCompat="@drawable/fire"
            android:layout_gravity="top|start">
        </ImageView>
        <ImageView
            android:id="@+id/topImage1"
            android:layout_width="wrap_content"
            android:layout_marginTop="-5dp"
            android:layout_height="100dp"
            android:rotation="180"
            android:visibility="invisible"

            app:srcCompat="@drawable/fire"
            android:layout_gravity="top|end">
        </ImageView>
        <ImageView
            android:id="@+id/topImage2"
            android:layout_width="wrap_content"
            android:layout_marginTop="-5dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            android:rotation="180"
            app:srcCompat="@drawable/fire"

            android:layout_gravity="top|center">
        </ImageView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="100dp"
            android:layout_gravity="center|bottom"
            >

            <Button
                android:id="@+id/buttonStart"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#8E1616"
                android:fontFamily="@font/hexagothic_display"
                android:text="New Game"
                android:textSize="30sp"
                android:layout_marginHorizontal="10dp"
                />

            <Button
                android:id="@+id/buttonContinue"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:backgroundTint="#8E1616"
                android:fontFamily="@font/hexagothic_display"
                android:textSize="30sp"

                android:layout_marginHorizontal="10dp"
                />
            <Button
                android:id="@+id/buttonExit"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exit"
                android:backgroundTint="#8E1616"
                android:fontFamily="@font/hexagothic_display"
                android:textSize="30sp"

                android:layout_marginHorizontal="10dp"
                />

        </LinearLayout>


        <Button
            android:id="@+id/titleButton"
            android:alpha="0"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginBottom="70dp"
            android:layout_gravity="center"
            >
        </Button>
        <TextView
            android:id="@+id/titulo"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginBottom="110dp"
            android:gravity="center"
            android:text="Cat"
            android:textColor="#EEEEEE"
            android:textSize="100sp"
            android:fontFamily="@font/vixa"
            />
        <TextView
            android:id="@+id/titulo2"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Clicker"
            android:textColor="#EEEEEE"
            android:textSize="100sp"
            android:fontFamily="@font/vixa"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:fontFamily="@font/vixa"
            android:textSize="20sp"
            android:textColor="#D84040"
            android:layout_marginBottom="350dp"
            android:text="Patricia S. Gracia Artero"
            >

        </TextView>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
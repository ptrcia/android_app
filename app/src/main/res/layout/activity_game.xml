<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game">

    <!-- Upper bar -->
    <LinearLayout
        android:id="@+id/linearTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/black"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>
    <!-- Central -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/linearTop"
        app:layout_constraintBottom_toTopOf="@id/linearBottom"
        android:background="#F7EDE2">



        <TextView
            android:id="@+id/scoreText"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:text="SCORE"
            android:textSize="30sp"
            android:textColor="#F28482"
            android:fontFamily="@font/parkinsans_bold"
            android:gravity="center">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:text="puntos/click"
                android:textSize="20sp"
                android:textColor="#540b0e"
                android:fontFamily="@font/parkinsans_regular"
                android:gravity="center">
            </TextView>
            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:text="puntos/segundo"
                android:textSize="20sp"
                android:fontFamily="@font/parkinsans_regular"
                android:textColor="#540b0e"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/clickValueText"
                android:layout_marginTop="80dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:text="clickValueText"
                android:textSize="20sp"
                android:fontFamily="@font/parkinsans_bold"
                android:textColor="#8f2d56"
                android:gravity="center">
            </TextView>
            <TextView
            android:id="@+id/passiveValueText"
            android:layout_marginTop="80dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
                android:layout_weight="1"
            android:layout_gravity="top"
            android:text="passiveValueText"
            android:textSize="20sp"
                android:fontFamily="@font/parkinsans_bold"
            android:textColor="#8f2d56"
            android:gravity="center">
            </TextView>
        </LinearLayout>


        <ImageButton
            android:id="@+id/buttonClickeableCat"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:contentDescription="@string/button_to_click_to_obtain_points"
            android:scaleType="centerCrop"
            android:src="@drawable/heartpaw">
        </ImageButton>
    </FrameLayout>
    <!-- Lower bar -->
    <LinearLayout
        android:id="@+id/linearBottom"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="#F6BD60"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/buttonPassives"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:fontFamily="@font/parkinsans_bold"
            android:contentDescription="Bonificadores que al adquirirlas, te suman valor automÃ¡ticamente cada cierto tiempo"
            android:text="Mejoras pasivas"
            android:textColor="@color/white">

        </Button>

        <Button
            android:id="@+id/buttonActives"
            style="?android:attr/buttonBarButtonStyle"
            android:background="@drawable/rounded_shape"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:fontFamily="@font/parkinsans_bold"
            android:contentDescription="Bonificadores que al adquirirlas, te suman valor por cada click que se realiza de manera manual"
            android:text="Mejoras activas"
            android:textColor="@color/white">

        </Button>
    </LinearLayout>
    <!-- Container -->
    <FrameLayout

        android:id="@+id/container_layout"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent">

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
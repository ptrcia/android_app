<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-28dp"
        android:background="#F7EDE2">
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginBottom="-5dp"
            android:layout_height="100dp"
            android:src="@drawable/cats1"
            android:layout_gravity="bottom">
        </ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="-5dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/cats2"
            android:layout_gravity="top">
        </ImageView>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_marginBottom="200dp"
            android:layout_gravity="center|bottom"
            >

            <Button
                android:id="@+id/buttonStart"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:fontFamily="@font/parkinsans_bold"
                />

            <Button
                android:id="@+id/buttonContinue"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:fontFamily="@font/parkinsans_bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/buttonConfig"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/settings"
                    />
                <Button
                    android:id="@+id/buttonExit"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exit"
                    android:fontFamily="@font/parkinsans_bold"
                    android:layout_marginHorizontal="30dp"
                    />
                <ImageButton
                    android:id="@+id/buttonVolume"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/volume" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/titulo"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginBottom="90dp"
            android:gravity="center"
            android:text="Cat"
            android:textColor="#F28482"
            android:textSize="90sp"
            android:fontFamily="@font/glina_script"
            />
        <TextView
            android:id="@+id/titulo2"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:text="Clicker"
            android:textColor="#F28482"
            android:textSize="80sp"
            android:fontFamily="@font/glina_script"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:fontFamily="@font/parkinsans_light"
            android:textSize="15sp"
            android:textColor="#F28482"
            android:layout_marginBottom="100dp"
            android:text="Patricia S. Gracia Artero"
            >

        </TextView>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>